{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                               
    "outDir": "dist",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,
    "skipLibCheck": true,                               
    "rootDirs": ["src", "tests"],                       
    "baseUrl": "./",                                 
    "paths": {                                          
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"]
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/presentation/docs", "test"]
}
